<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewRows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Number of rows: "
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="161dp" />

        <TextView
            android:id="@+id/textCheksum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Checksum: "
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="161dp" />

        <TextView
            android:id="@+id/textViewTime"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time last operation: 0" />

        <Button
            android:id="@+id/buttonSimpleReplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push and Pull Replication" />

        <Button
            android:id="@+id/buttonCompleteReplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Replication" />

        <Button
            android:id="@+id/buttonDeleteDatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Database" />

        <Button
            android:id="@+id/buttonRecalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-calculate" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>